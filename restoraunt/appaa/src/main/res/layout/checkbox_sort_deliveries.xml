<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="20dp">
    <CheckBox android:id="@+id/checkbox_sort_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ממתין לשליח"
        />

    <CheckBox
        android:id="@+id/checkbox_sort_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkbox_sort_a"
        android:text="השליח בדרך למסעדה" />

    <CheckBox
        android:id="@+id/checkbox_sort_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkbox_sort_b"
        android:text="השליח בדרך ללקוח" />

    <CheckBox
        android:id="@+id/checkbox_sort_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkbox_sort_c"
        android:text="המשלוח נמסר ללקוח" />

    <Button
        android:id="@+id/button_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkbox_sort_d"
        android:text="סיים" />

</RelativeLayout>